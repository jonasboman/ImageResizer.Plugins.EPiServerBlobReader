@using ImageResizer
@using ImageResizer.Plugins.EPiServer
@using SampleAlloy.Business
@model PageViewModel<SampleAlloy.Models.Pages.StartPage>


<div>
    @Html.Raw(Html.ResizePicture(Model.CurrentPage.MainImage, PictureProfiles.SampleImage, cssClass: "sample-css-class").ToHtmlString())
    @Html.ResizePicture(Model.CurrentPage.MainImage, PictureProfiles.SampleImage, cssClass: "sample-css-class")
</div>

<div>
    @Html.ResizePictures(new[]
                         {
                             Html.ResizeImage(Model.CurrentPage.XLImage).Quality(10),
                             Html.ResizeImage(Model.CurrentPage.LGImage).Quality(10),
                             Html.ResizeImage(Model.CurrentPage.MDImage).Quality(10),
                             Html.ResizeImage(Model.CurrentPage.SMImage).Quality(10),
                             Html.ResizeImage(Model.CurrentPage.XSImage).Quality(10)
                         }, PictureProfiles.BootstrapGrid, cssClass: "sample-css-class")

    @Html.ResizePictures(new[]
                         {
                             Model.CurrentPage.XLImage,
                             Model.CurrentPage.LGImage,
                             Model.CurrentPage.MDImage,
                             Model.CurrentPage.SMImage,
                             Model.CurrentPage.XSImage
                         }, PictureProfiles.BootstrapGrid, cssClass: "sample-css-class")

    @Html.ResizePicture(Model.CurrentPage.MainImage, PictureProfiles.SampleImage, cssClass: "sample-css-class")
    @Html.ResizePicture(Model.CurrentPage.MainImage.ResizeImage().Quality(10), PictureProfiles.SampleImage, cssClass: "sample-css-class")
    @Html.ResizePictureWithFallback(Model.CurrentPage.EmptyImage, PictureProfiles.SampleImage, "/noimage.jpg?scale=both", cssClass: "sample-css-class")
</div>

<div>
    <img src="@Html.ResizeImage(Model.CurrentPage.MainImage, 100).Add("h", "150").Add("gradient", "true")"/>

    <img src="@Html.ResizeImage(Model.CurrentPage.MainImage).Width(200).Height(200).Scale(ScaleMode.Both).FitMode(FitMode.Crop)"/>
</div>

<div>
    <img src="@Html.ResizeImageWithFallback(Model.CurrentPage.EmptyImage, "/noimage.jpg", 100).Add("h", "150").Add("gradient", "true")"/>

    <img src="@Html.ResizeImageWithFallback(Model.CurrentPage.EmptyImage, "/noimage.jpg").Width(200).Height(200).Scale(ScaleMode.Both).FitMode(FitMode.Crop)"/>
</div>

<div>
    <img src="@Html.ResizeImageWithFallback(Model.CurrentPage.EmptyImage, string.Empty, 100).Add("h", "150").Add("gradient", "true")"/>

    <img src="@Html.ResizeImageWithFallback(Model.CurrentPage.EmptyImage, string.Empty).Width(200).Height(200).Scale(ScaleMode.Both).FitMode(FitMode.Crop)"/>
</div>
